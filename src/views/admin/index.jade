#admin
  .container
    .twelve.columns
      header#admin-header
        h2 
          a(ui-sref="admin.sensors" translate) Área administrativa
        nav(ng-show="token").row
          ul.tabbed-nav
            li(ui-sref-active="active")
              a(ui-sref="admin.sensors") 
                span.icon-signal 
                span(translate) Sensores
              ul
                li
                  a(ui-sref="admin.sensors.new") 
                    span.icon-plus 
                    span(translate) Novo sensor
            li(ui-sref-active="active")
              a(ui-sref="admin.users") 
                span.icon-user 
                span(translate) Usuários
              ul
                li
                  a(ui-sref="admin.users.new") 
                    span.icon-plus 
                    span(translate) Novo usuário
            li(ui-sref-active="active")
              a(ui-sref="admin.broadcast") 
                span.icon-megaphone 
                span(translate) Broadcast
  .container
    .twelve.columns
      div(ui-view autoscroll="false")
